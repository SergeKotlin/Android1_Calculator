<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calculator_linear_layout_id"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/calculator_layout_id"
    android:layout_gravity="start|bottom">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOfTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/horizontalTopGuideline" />

    <TextView
        android:id="@+id/calc_resultText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_result_text_view_landscape"
        android:layout_marginStart="@dimen/horizontalTopGuideline"
        android:gravity="start"
        android:text="@string/resultStringView"
        android:textSize="@dimen/sizeTextResultView_landscape"
        style="@style/RedColor"
        android:background="#ABABC7E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_equals" />

    <TextView
        android:id="@+id/calc_inputTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_work_text_view"
        android:layout_marginStart="@dimen/horizontalTopGuideline"
        android:gravity="start"
        android:text="@string/inputString"
        android:textSize="@dimen/sizeTextInputView"
        style="@style/RedColor"
        android:background="#ABABC7E3"
        app:layout_constraintBottom_toTopOf="@+id/calc_resultText"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_plus"
        app:layout_constraintTop_toTopOf="parent" />
    <!--1st row-->

    <Button
        android:id="@+id/calc_btn_1"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@+id/calc_btn_4"
        app:layout_constraintEnd_toStartOf="@+id/calc_btn_2"
        app:layout_constraintStart_toEndOf="@+id/guidelineOfTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        android:id="@+id/calc_btn_2"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_2"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@+id/calc_btn_5"
        app:layout_constraintEnd_toStartOf="@+id/calc_btn_3"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        android:id="@+id/calc_btn_3"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_3"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_6"
        app:layout_constraintEnd_toStartOf="@id/calc_btn_delete"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        style="@style/BlackColor"
        android:id="@+id/calc_btn_delete"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_del"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_plus"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <!--2nd row-->
    <Button
        android:id="@+id/calc_btn_4"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_4"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_7"
        app:layout_constraintEnd_toStartOf="@+id/calc_btn_5"
        app:layout_constraintStart_toEndOf="@+id/guidelineOfTop"
        app:layout_constraintTop_toBottomOf="@id/calc_btn_1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        android:id="@+id/calc_btn_5"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_5"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_8"
        app:layout_constraintEnd_toStartOf="@id/calc_btn_6"
        app:layout_constraintStart_toEndOf="@id/calc_btn_4"
        app:layout_constraintTop_toBottomOf="@id/calc_btn_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        android:id="@+id/calc_btn_6"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_6"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_9"
        app:layout_constraintEnd_toStartOf="@id/calc_btn_plus"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_5"
        app:layout_constraintTop_toBottomOf="@id/calc_btn_3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        style="@style/BlackColor"
        android:id="@+id/calc_btn_plus"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_plus"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_minus"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_6"
        app:layout_constraintTop_toBottomOf="@id/calc_btn_delete"
        app:layout_constraintVertical_chainStyle="packed" />
    <!--3d row-->
    <Button
        android:id="@+id/calc_btn_7"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_7"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_0"
        app:layout_constraintEnd_toStartOf="@+id/calc_btn_8"
        app:layout_constraintStart_toEndOf="@+id/guidelineOfTop"
        app:layout_constraintTop_toBottomOf="@id/calc_btn_4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        android:id="@+id/calc_btn_8"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_8"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_increase"
        app:layout_constraintEnd_toStartOf="@+id/calc_btn_9"
        app:layout_constraintStart_toEndOf="@id/calc_btn_7"
        app:layout_constraintTop_toBottomOf="@+id/calc_btn_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        android:id="@+id/calc_btn_9"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_9"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_division"
        app:layout_constraintEnd_toStartOf="@id/calc_btn_minus"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_8"
        app:layout_constraintTop_toBottomOf="@id/calc_btn_6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        style="@style/BlackColor"
        android:id="@+id/calc_btn_minus"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_minus"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toTopOf="@id/calc_btn_equals"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_9"
        app:layout_constraintTop_toBottomOf="@id/calc_btn_plus"
        app:layout_constraintVertical_chainStyle="packed" />
    <!--4th row-->
    <Button
        android:id="@+id/calc_btn_0"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calc_btn_increase"
        app:layout_constraintStart_toEndOf="@+id/guidelineOfTop"
        app:layout_constraintTop_toBottomOf="@+id/calc_btn_7"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        style="@style/BlackColor"
        android:id="@+id/calc_btn_increase"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_increase"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calc_btn_division"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_0"
        app:layout_constraintTop_toBottomOf="@+id/calc_btn_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />
    <Button
        style="@style/BlackColor"
        android:id="@+id/calc_btn_division"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_division"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_increase"
        app:layout_constraintTop_toBottomOf="@+id/calc_btn_9"
        app:layout_constraintEnd_toStartOf="@id/calc_btn_equals"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        style="@style/BlackColor"
        android:id="@+id/calc_btn_equals"
        android:layout_width="@dimen/size_num_buttons"
        android:layout_height="wrap_content"
        android:text="@string/_equals"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/calc_btn_division"
        app:layout_constraintTop_toBottomOf="@+id/calc_btn_minus"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
